<h1>All R Packages</h1>

<%= form_tag(r_packages_path, method: 'get', id: 'search-form', class: 'form-inline centered') do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Search Packages', class: 'form-control' %>
  <%= submit_tag 'Search', name: nil, class: 'btn btn-primary' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>Depends</th>
      <th>Suggests</th>
      <th>License</th>
    </tr>
  </thead>
  <tbody>
    <% @r_packages&.each do |r_package| %>
      <tr>
        <th scope="row"><%= link_to(r_package.name, r_package_path(r_package)) %></td>
        <td><%= r_package.version %></td>
        <td><%= r_package.depends %></td>
        <td><%= r_package.suggests %></td>
        <td><%= r_package.license %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @r_packages %>
